<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <WasmShellMonoRuntimeExecutionMode>FullAOT</WasmShellMonoRuntimeExecutionMode>
    <InvariantGlobalization>true</InvariantGlobalization>
    <WasmShellIndexHtmlPath>index.html</WasmShellIndexHtmlPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Uno.Foundation.Runtime.WebAssembly" Version="4.0.13" />
    <PackageReference Include="Uno.Wasm.Bootstrap" Version="3.2.0" />
  </ItemGroup>

  <ItemGroup>
    <LinkerDescriptor Include="LinkerConfig.xml" />
  </ItemGroup>

</Project>
